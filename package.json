{
    "name": "rc-formly",
    "workspaces": [
        "packages/*"
    ],
    "description": "JSON powerered forms with Formik",
    "repository": "https://github.com/nkovacic/rc-formly",
    "license": "MIT",
    "private": true,
    "scripts": {
        "prestart": "yarn build",
        "start": "lerna run start --stream --scope=@rc-formly/stories",
        "pretest": "yarn build",
        "test": "jest --config=jest.json",
        "test:stories": "lerna run test --stream --scope=@rc-formly/stories",
        "build": "tsc --build",
        "build:stories": "lerna run build --stream --scope=@rc-formly/stories",
        "clean": "rimraf packages/*/{tsconfig.tsbuildinfo,lib,dist}",
        "lint": "eslint packages/**/src/**/*.{ts,tsx}",
        "release:auto": "lerna publish from-git --yes",
        "release:manual": "lerna publish from-package --yes",
        "release:version": "lerna version --conventional-commits --yes --message \"chore(All): Bump version [skip ci]\""
    },
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-react": "^7.0.0",
        "@types/jest": "^24.0.13",
        "@types/react": "^16.8.18",
        "@types/react-dom": "^16.8.4",
        "@types/react-test-renderer": "^16.8.1",
        "@types/yup": "^0.26.16",
        "@typescript-eslint/eslint-plugin": "^2.6.0",
        "@typescript-eslint/parser": "^2.6.0",
        "babel-jest": "^24.8.0",
        "eslint": "^6.6.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.16.0",
        "eslint-plugin-react-hooks": "^1.7.0",
        "formik": "^1.5.7",
        "jest": "^24.8.0",
        "lerna": "^3.14.1",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-test-renderer": "^16.8.6",
        "rimraf": "^2.6.3",
        "ts-jest": "^24.0.2",
        "typescript": "^3.4.5",
        "yup": "^0.27.0"
    },
    "version": "0.1.0"
}
